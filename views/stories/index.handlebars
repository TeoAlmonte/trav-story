<h1>index</h1>

<div class="row">
  {{#each stories}}
    <div class="col s12 m4">
      <div class="card">

        <div class="card-content">
          <p>{{title}}</p>
          <p>{{stripTags (truncate body 30)}}</p>
          <br>
          {{user.firstName}} {{user.lastName}}
          <img src="{{user.image}}" alt="" width="30px" height:"30px">
          <p>{{formatDate date 'MMMM Do YYYY'}}</p>
        </div>
        <p><a href="/stories/show/{{id}}">read more</a></p> 
        <div class="card-image">
         
            {{{editIcon user.id ../user.id id}}}
          
        </div>
      </div>
    </div>
  {{else}}
  <p>no stories</p>
  {{/each}}
</div>