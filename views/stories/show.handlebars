<h1>show</h1>

<div class="row">
  <div class="col s12">
    <div class="card">

      <div class="card-content">
        <p>{{story.title}}</p>
        <p>{{{story.body}}}</p>
        <br>
        {{story.user.firstName}} {{story.user.lastName}}
        <img src="{{story.user.image}}" alt="" width="30px" height:"30px">
        <p>{{formatDate story.date 'MMMM Do YYYY'}}</p>
      </div>
      <div class="card-image">
        <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab red">
        <i class="fa fa-pencil"></i>
        </a>
      </div>
      <a href="/stories/user/{{story.user.id}}">More from {{story.user.firstName}}</a>
    </div>
  </div>
</div>